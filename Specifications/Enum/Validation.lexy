scenario InvalidEnumNegativeValue
  enum InvalidEnumNegativeValueEnum
    First = 0
    Second = -1
  ExpectErrors
    "Validation.lexy(4, 15): ERROR - Invalid number of tokens: 4. Should be 1 or 3."

scenario InvalidEnumDecimalValue
  enum InvalidEnumDecimalValueEnum
    First = 0
    Second = 1.1
  ExpectErrors
    "Enum member value should not be decimal: 1.1"

scenario InvalidEnumDuplicatedMember
  enum InvalidVEnumDuplicatedMemberEnum
    First = 0
    First = 1
  ExpectErrors
    "Enum member name should be unique. Duplicate name: 'First'"

enum ValidEnum
  First
  Second
  Third

scenario InvalidEnumInitializeNumber
  function
    Parameters
      ValidEnum Value = 1
    Results
      ValidEnum Result
    Code
      Result = Value
  ExpectErrors
    "Invalid default value '1'. (type: 'ValidEnum')"

scenario InvalidEnumInitializeString
  function
    Parameters
      ValidEnum Value = "a"
    Results
      ValidEnum Result
    Code
      Result = Value
  ExpectErrors
    "Invalid default value 'a'. (type: 'ValidEnum')"

